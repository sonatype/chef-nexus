import os
import json
import sys
resultPath = "/run/cloud-init/result.json"
if os.path.exists(resultPath):
 result = json.load(open(resultPath, "r"))
 if len(result["v1"]["errors"]):
   sys.exit("Finished with errors:" + "\n".join(result["v1"]["errors"]))
else:
 sys.exit(resultPath + " not found")
